@using PhotoalbumMvcPL.ViewModels

@model PhotoViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Редактировать описание</h2>
@*---------------------------------------------------FORM FOR DESCRIPTION EDIT---------------------------------------------------*@
<div width="100%" align="center">
    <img style="max-width: 100%" src="@Url.Action("GetImage", "Photo", new {photoId = Session["PhotoId"]},null)" />
</div>
<div width="100%" align="center">
    @using (Html.BeginForm("Edit", "Photo"))
    {
    <div class="editor-field">
        @Html.EditorFor(model => model.Description)
        @Html.ValidationMessageFor(model => model.Description)
    </div>
    <p>
        <input type="submit" value="Изменить описание" />
    </p>
    }
</div>
@*---------------------------------------------------SCRIPT FOR VALIDATION HINT---------------------------------------------------*@
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}